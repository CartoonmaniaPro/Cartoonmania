---
import Layout from '/../layouts/Layout.astro';
import data from '../../public/data.json';
import '/../../assets/scss/astro-ecommerce.scss';
import '/../../assets/scss/auto-index.css'
import CardCategory from '/../components/products/cardCategory';
import ProductFeature from '/../components/products/productFeature';
import Navbar from '/./components/navbar';
import Footer from '/../components/footer';
import TestimonialsFade from '/../components/promo/testimonialsFade';
import PromoSectionLarge from '/../components/promo/promoSectionLarge';
import CategoryFilters from '/../components/products/categoryFilters';

---

<Layout title="Cartoonmania">
	<main>
    <Navbar />
    <PromoSectionLarge 
      title={"Collection is here"}
      full_description={data.products[0].full_description}  
      pageHeaderBgImg={`${import.meta.env.BASE_URL}images/heart.png`}
      pageHeaderMinVh="90vh"
    />
    <div class="container my-5">
      
    <div class="my-5">
      <ProductFeature
        title="¿Nos conoces?"
        images={data.products[2].images}
        full_description="Creemos firmemente en la importancia de reducir, reutilizar y reciclar, y nos enorgullece ofrecer productos que contribuyan positivamente a la reducción de desechos y al fomento de un estilo de vida más sostenible."
        featuresDetails={data.products[0].featuresDetails}
      />
    </div>
    <div class="mt-5">
      <TestimonialsFade 
        pageHeaderBgImg={"https://images.unsplash.com/photo-1519642918688-7e43b19245d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2676&q=80"} 
        pageHeaderMinVh="50vh"
      />
    </div>

    <div class=" mt-5  mb-10">
      <CategoryFilters
        title="Nuestros productos"
      />
    </div>
    
    <Footer />

    </div>
  </main>

</Layout>